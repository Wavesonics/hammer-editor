CREATE TABLE sync_data (
	user_id INTEGER NOT NULL,
	last_sync TEXT DEFAULT (datetime('now')) NOT NULL,
	FOREIGN KEY(user_id) REFERENCES account(id)
);

getSyncData:
SELECT *
FROM sync_data
WHERE user_id = ?;

hasSyncData:
SELECT EXISTS(SELECT 1 FROM sync_data WHERE user_id = ?);

createSyncData:
INSERT INTO sync_data(user_id, last_sync)
VALUES (?, ?);

updateSyncData:
UPDATE sync_data
SET last_sync = ?
WHERE user_id = ?;